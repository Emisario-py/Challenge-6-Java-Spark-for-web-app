<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{item.name}} - Subasta</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>

<body>
<header class="topbar">
    <div class="topbar-content">
        <h1>Detalle del Ítem</h1>
        {{#userId}}
            <div class="user-info">
                <a href="/users/{{userId}}" class="button-small">Volver al Dashboard</a>
            </div>
        {{/userId}}
    </div>
</header>

<main class="container">
    {{#success}}
        <div class="alert alert-success">{{success}}</div>
    {{/success}}
    {{#error}}
        <div class="alert alert-error">{{error}}</div>
    {{/error}}

    <div class="item-detail-grid">
        <!-- Card del ítem -->
        <section class="card item-card">
            <div class="item-badge">En Subasta</div>
            <h2 class="item-title">{{item.name}}</h2>
            <p class="item-description">{{item.description}}</p>

            <div class="price-section">
                <div class="price-box">
                    <span class="price-label">Precio inicial</span>
                    <span class="price-value">${{item.initialPrice}}</span>
                </div>
                <div class="price-box highlight">
                    <span class="price-label">Oferta mínima actual</span>
                    <span class="price-value">${{highest}}</span>
                </div>
            </div>

            {{#userId}}
                <form action="/items/{{item.id}}/offers" method="post" class="bid-form">
                    <input type="hidden" name="userId" value="{{userId}}" />
                    <h3 class="form-title">Hacer una oferta</h3>
                    <div class="field">
                        <label>Tu oferta (debe ser mayor a ${{highest}})</label>
                        <div class="input-with-icon">
                            <span class="currency-symbol">$</span>
                            <input type="number" step="0.01" name="amount" required
                                   placeholder="{{highest}}"
                                   min="{{highest}}" />
                        </div>
                    </div>
                    <button class="button-bid">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M12 2v20M17 5H9.5a3.5 3.5 0 0 0 0 7h5a3.5 3.5 0 0 1 0 7H6"></path>
                        </svg>
                        Realizar Oferta
                    </button>
                </form>
            {{/userId}}

            {{^userId}}
                <div class="alert alert-info">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <circle cx="12" cy="12" r="10"></circle>
                        <line x1="12" y1="16" x2="12" y2="12"></line>
                        <line x1="12" y1="8" x2="12.01" y2="8"></line>
                    </svg>
                    <div>
                        <strong>Inicia sesión para ofertar</strong>
                        <p>Regresa al <a href="/">inicio</a> y entra como usuario para poder realizar ofertas.</p>
                    </div>
                </div>
            {{/userId}}
        </section>

        <!-- Card del historial -->
        <section class="card history-card">

            <ul class="list offers-list">
                {{#offers}}
                    <li class="offer-item">
                        <div class="offer-content">
                            <div class="offer-amount">${{amount}}</div>
                            <div class="offer-details">
                            <span class="offer-user">
                                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                                    <circle cx="12" cy="7" r="4"></circle>
                                </svg>
                                Usuario #{{userName}}
                            </span>
                                {{#createdAt}}
                                    <span class="offer-date">
                                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <circle cx="12" cy="12" r="10"></circle>
                                    <polyline points="12 6 12 12 16 14"></polyline>
                                </svg>
                                        {{createdAt}}
                            </span>
                                {{/createdAt}}
                            </div>
                        </div>
                    </li>
                {{/offers}}
                {{^offers}}
                    <li class="empty-state">
                        <svg width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <rect x="2" y="7" width="20" height="14" rx="2" ry="2"></rect>
                            <path d="M16 21V5a2 2 0 0 0-2-2h-4a2 2 0 0 0-2 2v16"></path>
                        </svg>
                        <p>Sin ofertas aún</p>
                        <p class="empty-hint">¡Sé el primero en ofertar!</p>
                    </li>
                {{/offers}}
            </ul>

            {{#userId}}
                <div class="card-footer">
                    <a class="button button-ghost" href="/users/{{userId}}">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <line x1="19" y1="12" x2="5" y2="12"></line>
                            <polyline points="12 19 5 12 12 5"></polyline>
                        </svg>
                        Volver al Dashboard
                    </a>
                </div>
            {{/userId}}
        </section>
    </div>
</main>
</body>
<script src="/js/auction_websocket.js"></script>
<script>window.itemId = {{item.id}};</script>
<script src="/js/create_newoffer.js"></script>
</html>