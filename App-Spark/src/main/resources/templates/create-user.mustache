        .form-actions { display: flex; gap: 12px; margin-top: 30px; }
        .btn { padding: 14px 28px; border: none; border-radius: 8px; font-size: 16px; font-weight: 600; cursor: pointer;
            text-decoration: none; display: inline-flex; align-items: center; justify-content: center;
            transition: all 0.3s; flex: 1; }
        .btn-primary { background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white; }
        .btn-primary:hover { transform: translateY(-2px); box-shadow: 0 5px 15px rgba(102,126,234,0.4); }
        .btn-secondary { background-color: #f8f9fa; color: #666; border: 2px solid #e1e8ed; }
        .btn-secondary:hover { background-color: #e9ecef; }
        @media (max-width: 600px) {
            .form-container { padding: 25px; }
            .form-actions { flex-direction: column; }
        }
    </style>
</head>
